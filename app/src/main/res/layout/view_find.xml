<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonFindSearch"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/search" />

        <Spinner
            android:id="@+id/spinnerFindAll"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_weight="4"

            />


        <TextView
            android:id="@+id/textViewFindComputer"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="电脑"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewFindPhone"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="手机"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageViewFindMore"
            android:layout_width="58dp"
            android:layout_height="30dp"
            android:layout_weight="2"

            android:background="@mipmap/more_horizontal"
            android:scaleType="centerInside"
            android:spinnerMode="dropdown" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_find_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@mipmap/find_evaluationvideo_furniture" />
</LinearLayout>